{
  "name": "nextjs-boilerplate",
  "description": "A real thing!",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "dev": "cross-env NODE_ENV=development PORT=3000 API_HOST_URL='https://localhost:3000/' node server.js",
    "build": "cross-env NODE_ENV=production next build",
    "start": "node server.js",
    "export": "next export",
    "type-check": "tsc",
    "test-staged": "lint-staged",
    "prettify": "prettier --write",
    "lint": "cross-env ESLINT_CLI=true eslint --cache",
    "lint:fix": "npm run lint -- --fix --ext .js,.jsx,.ts,.tsx ./src",
    "generate": "plop --plopfile ./generators/index.js",
    "generate-certificates": "mkdir ./certificates && cd ./certificates && openssl req -x509 -newkey rsa:2048 -keyout keytmp.pem -out cert.pem -days 365 && openssl rsa -in keytmp.pem -out key.pem"
  },
  "dependencies": {
    "@zeit/next-sass": "^1.0.1",
    "classnames": "^2.2.6",
    "cookie-parser": "^1.4.5",
    "express": "^4.17.1",
    "http-proxy-middleware": "^1.0.6",
    "imagemin-svgo": "^8.0.0",
    "isomorphic-unfetch": "^3.1.0",
    "js-cookie": "^2.2.1",
    "lodash": "^4.17.20",
    "mobx": "^5.15.7",
    "mobx-react-lite": "^2.2.2",
    "mobx-state-tree": "^3.17.2",
    "mst-middlewares": "^3.17.2",
    "nanoid": "^3.1.16",
    "next": "^10.0.1",
    "next-compose-plugins": "^2.2.0",
    "next-optimized-images": "^2.6.2",
    "next-videos": "^1.4.0",
    "node-sass": "^5.0.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-scrollbars-custom": "^4.0.25",
    "svg-sprite-loader": "^5.0.0",
    "type-fest": "^0.18.0"
  },
  "devDependencies": {
    "@types/classnames": "^2.2.11",
    "@types/js-cookie": "^2.2.6",
    "@types/lodash": "^4.14.165",
    "@types/nanoid": "^2.1.0",
    "@types/node": "^14.14.6",
    "@types/react": "^16.9.56",
    "@types/react-dom": "^16.9.9",
    "@typescript-eslint/eslint-plugin": "^4.6.1",
    "@typescript-eslint/parser": "^4.6.1",
    "app-root-path": "^3.0.0",
    "cross-env": "^7.0.2",
    "eslint": "^7.13.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^6.15.0",
    "eslint-import-resolver-typescript": "^2.3.0",
    "eslint-plugin-import": "^2.3.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-lodash": "^7.1.0",
    "eslint-plugin-no-loops": "^0.3.0",
    "eslint-plugin-no-use-extend-native": "^0.5.0",
    "eslint-plugin-optimize-regex": "^1.2.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-sonarjs": "^0.5.0",
    "file-loader": "^6.2.0",
    "husky": "^4.3.0",
    "lint-staged": "^10.5.1",
    "plop": "^2.7.4",
    "postcss-import": "^12.0.1",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^2.1.2",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.5",
    "url-loader": "^4.1.1",
    "webpack-filter-warnings-plugin": "^1.2.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "npm run lint -- --fix"
    ],
    "*.{js,jsx,ts,tsx,md,html,css,json}": [
      "npm run prettify --"
    ]
  }
}
